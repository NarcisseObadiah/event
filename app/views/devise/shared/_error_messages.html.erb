<% if resource.errors.any? %>
  <div id="error_explanation">
    <ul class="p-0 m-0">
      <% resource.errors.full_messages.each do |message| %> 
        <small>
        <div class="alert-dismissible alert alert-danger py-2 %>">
          <button type="button" class="close" data-dismiss="alert" style="margin-top: -6px; margin-right: -6px;">&times;</button>
          <%= message %>
        </div>
        
        </small>  

      <% end %>
    </ul>
  </div>
<% end %>
